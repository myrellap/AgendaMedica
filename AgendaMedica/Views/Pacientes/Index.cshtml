@model IEnumerable<AgendaMedica.Models.Paciente>

@{
	ViewData["Title"] = "Cadastro de Pacientes";
}

<div class="container text-light mt-5">
	<h1 class="text-center display-5">Cadastro de <span class="fw-bold">Pacientes</span></h1>

	<p>
		<a asp-action="Create" class="btn btn-outline-light btn-lg w-25"> <i class="bi bi-plus-circle"></i> Adicionar</a>
	</p>
	<table class="table table-dark table-striped table-borderless">
		<thead>
			<tr>
				<th class="bg-black">
					Prontuário
				</th>
				<th class="bg-black">
					@Html.DisplayNameFor(model => model.Nome)
				</th>
				<th class="bg-black">
					@Html.DisplayNameFor(model => model.CPF)
				</th>
				<th class="bg-black">
					Data Nascimento
				</th>
				<th class="bg-black">
					@Html.DisplayNameFor(model => model.Celular)
				</th>
				<th class="bg-black">
					E-mail
				</th>
				<th class="bg-black">
					Ações
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Prontuario)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Nome)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.CPF)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.DataNascimento)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Celular)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Email)
					</td>
					<td>
						<a class="btn btn-outline-light btn-sm m-3" asp-action="Edit" asp-route-id="@item.PacienteId"> <i class="bi bi-pencil-square"></i> Editar</a> |
						<a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@item.PacienteId"> <i class="bi bi-trash"></i> Excluir</a>
					</td>
				</tr>
			}
		</tbody>
