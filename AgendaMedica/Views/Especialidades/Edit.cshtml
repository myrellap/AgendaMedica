@model AgendaMedica.Models.Especialidade

@{
	ViewData["Title"] = "Create";
}

<div class="container text-light mt-5">
	<h1 class="text-center display-5 ">Cadastro de <span class="fw-bold">Especialidades</span></h1>

	<form asp-action="Create">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>

		<div class="row gap-3 mb-3">
			<div class="col-12">
				<div class="form-group">
					<label asp-for="Nome" class="control-label"></label>
					<input asp-for="Nome" class="form-control" />
					<span asp-validation-for="Nome" class="text-danger"></span>
				</div>
			</div>
		</div>
		<div class="row gap-3 mt-3 mb-3">
			<div class="col-12 d-flex justify-content-between">
				<div>
					<a class="btn btn-outiline-light w-25" asp-action="Index">Cancelar</a>
				</div>

				<div class="form-group">
					<input type="submit" class="btn btn-light" />
				</div>
			</div>
		</div>

	</form>
</div>


