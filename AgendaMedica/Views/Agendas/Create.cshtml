@model AgendaMedica.Models.Agenda

@{
	ViewData["Title"] = "Create";
}

<div class="container text-light mt-5">
	<h1 class="text-center display-5 ">Cadastro de <span class="fw-bold">Agenda</span></h1>

	<form asp-action="Create">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>

		<div class="row gap-3 mb-3">
			<div class="col-12">
				<div class="form-group">
					<label asp-for="Paciente" class="control-label"></label>
					<input asp-for="Paciente" class="form-control" />
					<span asp-validation-for="Paciente" class="text-danger"></span>
				</div>
			</div>
		</div>

		<div class="row gap-3 mb-3">
			<div class="col-12">
				<div class="form-group">
					<label asp-for="Medico" class="control-label"></label>
					<input asp-for="Medico" class="form-control" />
					<span asp-validation-for="Medico" class="text-danger"></span>
				</div>
			</div>
		</div>

		<div class="row gap-3 mb-3">
			<div class="col-12 col-md">
				<div class="form-group">
					<label asp-for="DataConsulta" class="control-label"></label>
					<input asp-for="DataConsulta" class="form-control" />
					<span asp-validation-for="DataConsulta" class="text-danger"></span>
				</div>
			</div>
			<div class="col-12 col-md">
				<div class="form-group">
					<label asp-for="Status" class="control-label"></label>
					<input type="date" asp-for="Status" class="form-control" />
					<span asp-validation-for="Status" class="text-danger"></span>
				</div>
			</div>
		</div>

		

		<input type="hidden" value="0" class="form-control" />
		<div class="row gap-3 mt-3 mb-3">
			<div class="col-12 d-flex justify-content-between">
				<div>
					<a class="btn btn-outiline-light w-25" asp-action="Index">Cancelar</a>
				</div>

				<div class="form-group">
					<input type="submit" class="btn btn-light" />
				</div>
			</div>
		</div>



	</form>



</div>
